<form action="/login" method="POST">
    <!-- ID Number Input -->
    <div class="mb-3">
        <label for="email" class="form-label text-white">Email</label>
        <input type="email" class="form-control border-2 border-success" id="email" placeholder="email@dlsu.edu.ph"
            name="email" pattern=".+@dlsu\.edu\.ph" required title="Please use a valid @dlsu.edu.ph email address" value="{{user.email}}">
    </div>

    <!-- Password Input -->
    <div class="mb-3">
        <label for="password" class="form-label text-white">Password</label>
        <input type="password" class="form-control border-2 border-success" id="password" placeholder="*********"
            name="password" required value="{{user.password}}">
    </div>

    <!-- Remember Me & Register Link -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe" value="Yes">
            <label class="form-check-label text-white small" for="rememberMe">
                Remember me
            </label>
        </div>
        <a href="/register" class="text-bright-green text-decoration-none small fw-semibold">
            Don't have an account?
        </a>
    </div>

    <!-- Login Button -->
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-success rounded-pill py-2 mb-1 fw-semibold" id="login-btn">
            Log In
        </button>
        <a href="/slots-availability" class="btn btn-success rounded-pill py-2 fw-semibold" id="guest-btn"
            role="button">
            Continue as Guest
        </a>
    </div>
</form>